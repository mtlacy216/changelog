            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .modal-action-btn {
            padding: 0.75rem 1.5rem;
            background: var(--theme-1);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
        }

        .modal-action-btn:hover {
            background: #3a7bc8;
            transform: translateY(-1px);
        }

        /* Empty state */
        .empty-state {
            text-align: center;
