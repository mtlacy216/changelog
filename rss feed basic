        // Cache configuration
        const CACHE_CONFIG = {
            defaultTimeWindow: 48 * 60 * 60 * 1000,  // 48 hours
            batchSize: 20,                            // Articles to POST at once
            localCacheKey: 'nashville_civic_cache'
        };
        
        // Theme definitions with NLP matching patterns
        const THEMES = {
